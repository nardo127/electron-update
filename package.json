{
  "name": "electron-update",
  "version": "1.0.1",
  "description": "Electron updater example",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "cross-env GH_TOKEN=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 electron-builder",
    "publish": "electron-builder --win -p always"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.6.5"
  },
  "build": {
    "appId": "com.updater.app",
    "productName": "Electron Updater Example",
    "directories": {
      "output": "build/win"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "nardo127",
        "repo": "electron-update",
        "releaseType": "release",
        "private": true,
        "token": "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"
      }
    ]
  }
}
